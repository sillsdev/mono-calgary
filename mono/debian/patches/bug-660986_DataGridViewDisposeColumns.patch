@@ -53,7 +53,7 @@ namespace System.Windows.Forms {
 
 		~DataGridViewBand ()
 		{
-			Dispose();
+			Dispose(false);
 		}
 
 		[DefaultValue (null)]
@@ -227,6 +227,8 @@ namespace System.Windows.Forms {
 		//public sealed void Dispose () {
 		public void Dispose ()
 		{
+			Dispose(true);
+			GC.SuppressFinalize(this);
 		}
 
 		public override string ToString ()
