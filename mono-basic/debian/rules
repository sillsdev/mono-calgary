#!/usr/bin/make -f

LIBFW = /usr/lib/fieldworks

# Avoid build errors -- see Debian CLI policy
export MONO_SHARED_DIR=$(CURDIR)

%:
	dh $@ --with cli

override_dh_auto_configure:
	dh_auto_configure -- --prefix=$(LIBFW)/mono --sysconfdir=$(LIBFW)/mono/etc

# Don't run make check
override_dh_auto_test:

# Put debugging symbols in /usr/lib/debug
override_dh_strip:
	dh_strip -k

override_dh_shlibdeps:
	dh_shlibdeps -l $(LIBFW)
